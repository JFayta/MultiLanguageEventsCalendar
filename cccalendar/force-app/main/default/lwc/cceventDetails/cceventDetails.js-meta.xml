<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Calendar Event Details for Experience Cloud</masterLabel>
    <description>Calendar Event Details for Experience Cloud</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">

            <property name="recordId" type="String" label="Event Record Id" required="true" default="{!recordId}"
            description="Event record Id."/>

            <property name="hideEventDetailButton" type="Boolean" label="Hide Event Detail Button" required="false" default="false"
            description="Hide Event Detail (More Info) Button"/>

            <property name="eventDetailButtonText" type="String" label="Event Detail Button Text" required="false" default="More Info"
            description="Text for the event detail button, defaults to 'More Info'."/>

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>